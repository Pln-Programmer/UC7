generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Curso{
  id Int @id @default(autoincrement())
  nome String? 
  descricao String

  aluno Usuario[]
}

model Usuario{
  id Int @id @default(autoincrement())
  nome String? 
  matricula String? @unique
  email String @unique
  cursoId Int
  curso Curso @relation(fields: [cursoId], references: [id])
}